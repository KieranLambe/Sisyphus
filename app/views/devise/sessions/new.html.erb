<div class="container-box mt-5 text-center">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
            <div class="login-box" style="background-color: #E2725B; padding: 20px; border-radius: 10px;">
            <img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
      <%# <img src="" alt="Avatar" class="avatar-image"> %>
      <%# <i class="fa-solid fa-user-ninja"></i> %>
<h2 class="text-center">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, placeholder: "" %>
    <%= f.input :password, required: false, placeholder: "" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
</div>
</div>
</div>
</div>
