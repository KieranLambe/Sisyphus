<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-login">
        <img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
        <h2 class="text-center">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, placeholder: "" %>
            <%= f.input :password, required: false, placeholder: "" %>
            <label class="remember-me">
              <%= f.check_box :remember_me, class: "remember-checkbox" %>
              <span class="checkmark"></span> Remember login
            </label>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary custom-login-button" %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
