  <%if @user_tasks.length > 0%>
    <div class="row me-3">
      <div class="col-md-6"></div>
      <div class="col-md-4 offset-md-2">
        <h2> Your tasks for the day </h2>
        <% @user_tasks.each do |user_task| %>
          <% if user_task.complete == false %>
            <div class="task-card">
              <h3 class="user_task"><%= link_to user_task.task.title, user_user_task_path(current_user, user_task), class: "text-decoration-none text-dark" %></h3>
              <div class="button-container">
                <%= link_to " Check", toggle_complete_user_task_path(user_task), data: { turbo_method: :patch }, class: 'button fa-solid fa-check' %>
              </div>
            </div>
          <% else %>
            <h2><%= user_task.task.title %> This task is complete</h2>
          <% end %>
        <% end %>
      </div>
    </div>
  <%end%>
  <div data-controller="search-tasks interest-search">
    <div class="row justify-content-center">
      <div class="col-sm-8 my-3"  >
        <%= form_with url: tasks_path, method: :get, html: {class: "d-flex", data: {search_tasks_target: "form"} } do |f|%>
          <%= f.text_field :query,
                class: "form-control",
                placeholder: "Search for more tasks",
                value: params[:query],
                data: { search_tasks_target: "query",
                action: "keyup->search-tasks#search"
                }
            %>
          <%= f.submit "Search", class: "btn btn-primary d-none", id: "hidden-submit", disabled: true %>
        <% end %>
      </div>
    </div>
    <div class="container">
      <%= render "interest", tasks: @tasks %>
    </div>
    <div class="container">
      <h2>Tasks</h2>
      <%= render "lists", tasks: @tasks %>
    </div>
  </div>
