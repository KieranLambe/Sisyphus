
  <div class="container p-3">
    <!-- Title -->

    <!-- Button container -->
    <div class="button-container">
      <!-- Enclosing div for buttons -->
      <div class="button-wrapper">
        <!-- Journal Button -->
        <a href="#" class="button">Journal</a>
        <!-- Forum Button -->
        <a href="#" class="button">Forum</a>
        <!-- Dashboard Button -->
        <a href="#" class="button">Dashboard</a>
      </div>
    </div>

    <h1 class="title">Sisyphus</h1>
    <h2 class="sub">The legend of you trying <Br> to get stuff
      done
    </h2>
  </div>
  <%if @user_tasks.length > 0%>
    <div class="row">
      <div class="col-md-6"></div>
      <div class="col-md-4 offset-md-2">
        <h2> Your tasks for the day </h2>
        <% @user_tasks.each do |user_task| %>
          <% if user_task.complete == false %>
            <h3><%= link_to user_task.task.title, user_user_task_path(current_user, user_task) %></h3>
            <%= link_to 'Toggle Complete', toggle_complete_user_task_path(user_task), method: :patch, class: 'btn btn-primary' %>
          <% else %>
            <h2><%= user_task.task.title %> This task is complete</h2>
          <% end %>
        <% end %>
      </div>
    </div>
  <%end%>
  <div data-controller="search-tasks">
    <div class="row justify-content-center">
      <div class="col-sm-8 my-3"  >
        <%= form_with url: tasks_path, method: :get, html: {class: "d-flex", data: {search_tasks_target: "form"} } do |f|%>
          <%= f.text_field :query,
                class: "form-control",
                placeholder: "Search for more tasks",
                value: params[:query],
                data: { search_tasks_target: "query",
                action: "keyup->search-tasks#search"
                }
            %>
        <% end %>
      </div>
    </div>
    <div class="container">
      <h2>Tasks</h2>
      <%= render "lists", tasks: @tasks %>
    </div>
  </div>
