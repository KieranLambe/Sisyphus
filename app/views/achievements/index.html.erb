<div class="container d-flex flex-column align-items-center">
  <h3 class="mt-3 mb-4">Achievements</h3>
    <div class="achievements card-list">
      <h3 class="fs-2 fw-bold">Recent achievements</h3>
      <% @user_achievements.each do |user_achievement| %>
        <% if user_achievement.achieved %>
          <div>
            <h4><%= user_achievement.achievement.name %></h4>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex flex-wrap">
      <% @achievements.each do |achievement| %>
        <div class="achievement-card d-flex flex-column align-items-start justify-content-center align-items-center">
          <h4><%= achievement.name %></h4>
          <p><%= achievement.description %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
