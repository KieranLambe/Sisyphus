<div class="container interests-container mt-4">
  <div class="row">
    <% @interests.each_slice(4) do |slice| %>
      <% slice.each do |interest| %>
        <div class="col-md-3 mb-3">
          <%= button_to interest.title, tasks_path(query: interest.title), method: :get, class: "btn btn-primary btn-block interest-button", remote: true, data: { title: interest.title } %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
